<div class="col-12 col-md-5 col-xl-4 my-5">

  <!-- Heading -->
  <h1 class="display-4 text-center mb-3">
    Sign in
  </h1>

  <!-- Subheading -->
  <p class="text-muted text-center mb-5">
    Free access to our dashboard.
  </p>

  <!-- Form -->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if flash.any? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash.alert %>
      </div>
    <% end %>
    <!-- Email address -->
    <div class="form-group">

      <!-- Label -->
      <label class="form-label">
        Email Address
      </label>

      <!-- Input -->
      <%= f.text_field :login, :class=>"form-control", autofocus: true, autocomplete: "email" %>

    </div>

    <!-- Password -->
    <div class="form-group">
      <div class="row">
        <div class="col">

          <!-- Label -->
          <label class="form-label">
            Password
          </label>

        </div>
      </div> <!-- / .row -->

      <!-- Input group -->
      <div class="input-group input-group-merge">

        <!-- Input -->
        <%= f.password_field :password, :class=>"form-control", autocomplete: "current-password" %>

        <!-- Icon -->
        <span class="input-group-text" style="border-bottom-left-radius: 0;border-top-left-radius: 0;margin-left: -1px;">
          <i class="fe fe-eye"></i>
        </span>

      </div>
    </div>

    <!-- Submit -->
    <button class="btn btn-lg w-100 btn-primary mb-3">
      Sign in
    </button>

    <!-- Link -->
    <div class="text-center">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <small class="text-muted text-center">
        Don't have an account yet? <%= link_to "Sign up", new_registration_path(resource_name) %>.
      </small>
    </div>

  <% end %>

</div>